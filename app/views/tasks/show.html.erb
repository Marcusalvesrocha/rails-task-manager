<h2>Show Task</h2>

<p><%= "#{@task.id} - #{@task.title}"%></p>
<p><%= @task.details%></p>
<p><%=check_box_tag 'task', @task.id, @task.completed%>This task is <%= @task.completed ? " completed" : " not completed yet"%></p>
<p>
  <%=link_to "Edit Task", edit_task_path(@task) %>
</p>
<p>
  <%= link_to 'Remove', task_path(@task), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>
</p>
<p>
  <%=link_to "Back to list", tasks_path %>
</p>
